<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/control_padding">
    <Button
        android:id="@+id/button_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/menu_button_padding_vert"
        android:paddingHorizontal="@dimen/menu_button_padding_side"
        android:elevation="@dimen/elevation_low"
        android:drawableTop="@drawable/restart"
        android:text="@string/restart_label"/>
    <TextView
        android:id="@+id/current_turn_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/menu_button_padding_side"
        android:paddingVertical="@dimen/menu_button_padding_vert"
        android:textSize="16dp"
        android:textColor="#FFFFFFFF"
        android:text="@string/current_turn"/>
    <Button
        android:id="@+id/button_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/menu_button_padding_vert"
        android:paddingHorizontal="@dimen/menu_button_padding_side"
        android:elevation="@dimen/elevation_low"
        android:drawableTop="@drawable/home"
        android:text="@string/main_menu_label"/>

</LinearLayout>